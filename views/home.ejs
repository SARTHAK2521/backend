        </section>

        <section class="tracking-section">
            <div class="tracking-header">
                <div class="tracking-icon">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div class="tracking-content">
                    <h2>Heart Rate Monitoring</h2>
                    <p>Track your heart health in real-time</p>
                </div>
            </div>
