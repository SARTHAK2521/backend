    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-logo">
                <i class="fas fa-dumbbell"></i>
                <span>FitTrack Pro</span>
            </div>
            <div class="footer-links">
                <a href="#">About Us</a>
                <a href="#">Features</a>
                <a href="#">Pricing</a>
                <a href="#">Blog</a>
                <a href="#">Contact</a>
                <a href="#">Privacy Policy</a>
            </div>
            <div class="social-links">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="https://www.instagram.com/sarthakjoshi.14/"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <div class="copyright">
                &copy; 2025 FitTrack Pro. All rights reserved.
            </div>
        </div>
    </footer>

    <script>
        // Smooth scroll to analytics section
document.querySelectorAll('.analytics-link').forEach(link => {
    link.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.getElementById('analytics-section');
        if (target) {
            window.scrollTo({
                top: target.offsetTop - 20, // Adjust offset as needed
                behavior: 'smooth'
            });
            
            // Optional: Add a highlight animation
            anime({
                targets: target,
                backgroundColor: ['rgba(30, 39, 46, 0.7)', 'rgba(0, 168, 255, 0.1)'],
                duration: 1000,
                easing: 'easeInOutQuad',
                complete: function() {
                    anime({
                        targets: target,
                        backgroundColor: 'rgba(30, 39, 46, 0.7)',
                        duration: 1000,
                        easing: 'easeInOutQuad'
                    });
                }
            });
        }
    });
});
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Activity Chart
            const ctx = document.getElementById('activityChart').getContext('2d');
            const activityChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [
                        {
                            label: 'Steps',
                            data: [7521, 8432, 9210, 7854, 10234, 6543, 12543],
                            borderColor: '#00a8ff',
                            backgroundColor: 'rgba(0, 168, 255, 0.1)',
                            borderWidth: 3,
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Active Minutes',
                            data: [45, 52, 60, 48, 75, 35, 90],
                            borderColor: '#feca57',
                            backgroundColor: 'rgba(254, 202, 87, 0.1)',
                            borderWidth: 3,
                            tension: 0.4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                color: '#f5f6fa',
                                font: {
                                    family: 'Poppins'
                                }
                            }
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(30, 39, 46, 0.9)',
                            titleColor: '#f5f6fa',
                            bodyColor: '#dcdde1',
                            borderColor: 'rgba(0, 168, 255, 0.5)',
                            borderWidth: 1
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#dcdde1'
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#dcdde1'
                            },
                            beginAtZero: true
                        }
                    },
                    interaction: {
                        mode: 'nearest',
                        axis: 'x',
                        intersect: false
                    }
                }
            });

            // Animate elements on scroll
            const animateOnScroll = function() {
                const elements = document.querySelectorAll('.feature-card, .tracking-section, .hero');
                
                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.2;
                    
                    if (elementPosition < screenPosition) {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }
                });
            };

            // Set initial state for animation
            document.querySelectorAll('.feature-card, .tracking-section').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'all 0.6s ease';
            });

            window.addEventListener('scroll', animateOnScroll);
            animateOnScroll(); // Run once on load
        });

        // Simulate fetching steps data
        function fetchSteps() {
            const stepCount = document.getElementById('stepCount');
            stepCount.textContent = 'Syncing...';
            
            setTimeout(() => {
                // Random step count between 7,000 and 12,000
                const newSteps = Math.floor(Math.random() * 5000) + 7000;
                const formattedSteps = newSteps.toLocaleString();
                stepCount.textContent = formattedSteps;
                
                // Update progress bar
                const progressPercent = Math.min(Math.floor((newSteps / 12500) * 100), 100);
                document.querySelector('.progress-bar').style.width = `${progressPercent}%`;
                document.querySelector('.data-label:last-child').textContent = 
                    `${progressPercent}% of your 12,500 step goal`;
                
                // Animation
                anime({
                    targets: stepCount,
                    scale: [1.2, 1],
                    duration: 800,
                    easing: 'easeOutElastic'
                });
            }, 1500);
        }

        // Simulate fetching heart rate data
        function fetchHeartRate() {
            const heartRate = document.getElementById('heartRate');
            heartRate.classList.add('pulse');
            heartRate.textContent = 'Measuring...';
            
            setTimeout(() => {
                // Random heart rate between 60 and 100
                const newRate = Math.floor(Math.random() * 40) + 60;
                heartRate.innerHTML = `${newRate} <small>BPM</small>`;
                
                // Animation
                anime({
                    targets: heartRate,
                    scale: [1.3, 1],
                    duration: 1000,
                    easing: 'easeOutElastic'
                });
                
                setTimeout(() => {
                    heartRate.classList.remove('pulse');
                }, 2000);
            }, 2000);
        }
    </script>
