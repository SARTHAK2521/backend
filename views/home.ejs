            <div class="btn-group">
                <a href="/workouts" class="btn btn-primary">
                    <i class="fas fa-dumbbell"></i> View Workouts
                </a>
                <a href="/diet" class="btn btn-secondary">
                    <i class="fas fa-utensils"></i> Nutrition Plans
                </a>
                <a href="/schedule" class="btn btn-accent">
                    <i class="fas fa-bullseye"></i> Set Goals
                </a>
